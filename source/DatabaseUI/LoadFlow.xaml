<Window x:Class="DatabaseUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:database="clr-namespace:Database;assembly=Database"
        Title="LoadFlow" Height="600" Width="800">
    <Window.Resources>
        <database:PowerNets x:Key="PowerNets"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition MinHeight="100" MaxHeight="200"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="database connection string" Margin="2,2,2,2"/>
                    <Button Grid.Column="1" Content="connect" Name="ConnectButton" Margin="2,2,2,2"/>
                </Grid>
                <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{StaticResource PowerNets}" Width="396" Margin="2,2,2,2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="name" Width="100"/>
                        <DataGridTextColumn Binding="{Binding Frequency, StringFormat={}{0:e3}}" Header="frequency"/>
                        <DataGridTextColumn Binding="{Binding Nodes.Count, StringFormat={}{0:e3}}" Header="nodes"/>
                        <DataGridTextColumn Binding="{Binding Lines.Count, StringFormat={}{0:e3}}" Header="lines"/>
                        <DataGridTextColumn Binding="{Binding Loads.Count, StringFormat={}{0:e3}}" Header="loads"/>
                        <DataGridTextColumn Binding="{Binding FeedIns.Count, StringFormat={}{0:e3}}" Header="feed ins"/>
                        <DataGridTextColumn Binding="{Binding Generators.Count, StringFormat={}{0:e3}}" Header="generators"/>
                        <DataGridTextColumn Binding="{Binding Transformers.Count, StringFormat={}{0:e3}}" Header="transformers"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Name="DeletePowerNetButton" Content="delete current net" Margin="2,2,2,2"/>
                    <Button Grid.Column="1" Name="DeleteItemButton" Content="delete current item" Margin="2,2,2,2"/>
                    <Button Grid.Column="2" Name="CalculateButton" Content="calculate voltages" Margin="2,2,2,2"/>
                </Grid>
                <TextBox Grid.Row="3" Name="LoggingOutput" Margin="2,2,2,2" IsReadOnly="True"/>
            </Grid>
        </ScrollViewer>
        <TabControl Grid.Column="1">
            
        </TabControl>
    </Grid>
</Window>
