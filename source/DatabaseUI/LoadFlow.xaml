<Window x:Class="DatabaseUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:database="clr-namespace:Database;assembly=Database"
        Title="LoadFlow" Height="600" Width="800">
    <Window.Resources>
        <database:PowerNets x:Key="PowerNets"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition MinHeight="100" MaxHeight="200"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" Text="database connection string"/>
                    <Button Grid.Column="1" Content="connect" Name="ConnectButton"/>
                </Grid>
                <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{StaticResource PowerNets}" Width="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="name" Width="100"/>
                        <DataGridTextColumn Binding="{Binding Frequency, StringFormat={}{0:e3}}" Header="frequency"/>
                        <DataGridTextColumn Binding="{Binding Nodes.Count, StringFormat={}{0:e3}}" Header="nodes"/>
                        <DataGridTextColumn Binding="{Binding Lines.Count, StringFormat={}{0:e3}}" Header="lines"/>
                        <DataGridTextColumn Binding="{Binding Loads.Count, StringFormat={}{0:e3}}" Header="loads"/>
                        <DataGridTextColumn Binding="{Binding FeedIns.Count, StringFormat={}{0:e3}}" Header="feed ins"/>
                        <DataGridTextColumn Binding="{Binding Generators.Count, StringFormat={}{0:e3}}" Header="generators"/>
                        <DataGridTextColumn Binding="{Binding Transformers.Count, StringFormat={}{0:e3}}" Header="transformers"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Name="AddPowerNetButton" Content="add new net"/>
                    <Button Grid.Row="0" Grid.Column="1" Name="DeletePowerNetButton" Content="delete current net"/>
                    <Button Grid.Row="0" Grid.Column="2" Name="CalculateButton" Content="calculate node voltages"/>
                    <Button Grid.Row="1" Grid.Column="0" Name="AddItemButton" Content="add new item"/>
                    <Button Grid.Row="1" Grid.Column="1" Name="DeleteItemButton" Content="delete current item"/>
                </Grid>
                <TextBlock Grid.Row="3" Name="LoggingOutput"/>
            </Grid>
        </ScrollViewer>
        <TabControl Grid.Column="1">
            
        </TabControl>
    </Grid>
</Window>
